# GitHub Actions secrets mapping
# Configure these in repository Settings -> Secrets and variables -> Actions -> New repository secret
VPS_HOST=vps_ip_address
VPS_USER=root
VPS_SSH_KEY=private_key_content
VPS_APP_DIR=/opt/shop-skeleton
VPS_DOMAIN=example.com
VPS_EMAIL=email@email.email
INSTALL_CERTBOT=true
SETUP_UFW=true
RUN_VPS_SETUP=true
DATABASE_URL=file:/usr/src/app/data/prod.db

# Optional: for GHCR private repos, ensure runner can pull (GITHUB_TOKEN used in workflow)
GH_CLONE_TOKEN=repo_access_token
